<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cakeology_cakes">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-255dp">


        <ImageView
            android:id="@+id/mainImageView"
            android:layout_width="wrap_content"
            android:layout_height="254dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="109dp"
            android:layout_marginBottom="403dp"
            app:srcCompat="@drawable/special_fondant_cake" />

        <TextView
            android:id="@+id/description"
            android:layout_width="145dp"
            android:layout_height="31dp"
            android:layout_alignStart="@+id/title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="159dp"
            android:layout_marginBottom="312dp"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/price"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="101dp"
            android:layout_marginEnd="221dp"
            android:layout_marginBottom="278dp"
            android:text="TextView"
            android:textColor="#AC9E9E"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/price"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="230dp"
            android:layout_marginBottom="250dp"
            android:text="Weight"
            android:textColor="#504949" />

        <Button
            android:id="@+id/cartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="250dp"
            android:layout_marginTop="648dp"
            android:layout_marginEnd="39dp"
            android:layout_marginBottom="35dp"
            android:hint="@string/cartButton"

            android:textColorHint="#050505" />

        <Button
            android:id="@+id/buyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="647dp"
            android:layout_marginEnd="242dp"
            android:layout_marginBottom="36dp"
            android:hint="@string/buyButton"
            android:textColorHint="#050505" />

        <EditText
            android:id="@+id/quantity"
            android:layout_width="200dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="99dp"
            android:layout_marginTop="493dp"
            android:layout_marginEnd="112dp"
            android:layout_marginBottom="191dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#373434"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#655E5E" />

        <EditText
            android:id="@+id/greeting"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="548dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="123dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#373434"
            android:textColorHint="#655E5E" />

        <EditText
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="102dp"
            android:layout_marginTop="333dp"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="348dp"
            android:clickable="false"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>