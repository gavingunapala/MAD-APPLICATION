<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/homeLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/header"
                android:layout_width="126dp"
                android:layout_height="137dp"
                app:srcCompat="@drawable/ic_launcher_foreground"
                tools:ignore="MissingConstraints,VectorDrawableCompat" />

            <TextView
                android:id="@+id/myText1"
                android:layout_width="241dp"
                android:layout_height="27dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="Title"
                android:textColor="#151515"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.92"
                app:layout_constraintStart_toEndOf="@+id/header"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/myText2"
                android:layout_width="237dp"
                android:layout_height="47dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/open_sans_italic"
                android:text="Description"
                android:textColor="#221F1F"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/myText1"
                app:layout_constraintTop_toBottomOf="@+id/myText4"
                app:layout_constraintVertical_bias="0.416"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/myText3"
                android:layout_width="88dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:text="Price"
                android:textColor="#322C2C"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/myText1"
                app:layout_constraintTop_toBottomOf="@+id/myText1" />

            <TextView
                android:id="@+id/myText4"
                android:layout_width="81dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:text="Weight"
                android:textColor="#322C2C"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.757"
                app:layout_constraintStart_toEndOf="@+id/myText3"
                app:layout_constraintTop_toBottomOf="@+id/myText1" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="17dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toEndOf="@+id/myText3"
                app:layout_constraintTop_toBottomOf="@+id/myText1"
                app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
